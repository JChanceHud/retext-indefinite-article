{
  "name": "retext-indefinite-article",
  "version": "1.1.3",
  "description": "Check if indefinite articles (`a`, `an`) are used correctly",
  "license": "MIT",
  "keywords": [
    "indefinite",
    "article",
    "articles",
    "a",
    "an",
    "retext"
  ],
  "repository": "retextjs/retext-indefinite-article",
  "bugs": "https://github.com/retextjs/retext-indefinite-article/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "files": [
    "lib",
    "index.js"
  ],
  "dependencies": {
    "format": "^0.2.2",
    "nlcst-to-string": "^2.0.0",
    "number-to-words": "^1.2.3",
    "unist-util-is": "^2.0.0",
    "unist-util-visit": "^1.1.0"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "chalk": "^2.0.0",
    "esmangle": "^1.0.1",
    "nyc": "^11.0.0",
    "prettier": "^1.12.1",
    "remark-cli": "^5.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "retext": "^5.0.0",
    "tape": "^4.0.0",
    "xo": "^0.20.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write '**/*.js' && xo --fix",
    "build-bundle": "browserify index.js --bare -s retextIndefiniteArticle > retext-indefinite-article.js",
    "build-mangle": "esmangle retext-indefinite-article.js > retext-indefinite-article.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "no-var": "off",
      "prefer-arrow-callback": "off"
    },
    "ignores": [
      "retext-indefinite-article.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  }
}
